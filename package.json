{
    "name": "cria-ui-react",
    "version": "1.1.0-rc7",
    "description": "A UI Component Toolkit for React",
    "private": false,
    "main": "dist/npm/es5/index.js",
    "jsnext:main": "next.js",
    "files": [
        "themes",
        "dist"
    ],
    "scripts": {
        "start": "cd site && node run.js",
        "test": "build-storybook && CI=true react-scripts test --watchAll=false --coverage",
        "test:only": "CI=true react-scripts test --watchAll=false --coverage",
        "lint": "eslint src libs site --quiet",
        "build": "cd build/site && webpack --progress",
        "prepublishOnly": "./build/scripts/prepare.sh",
        "deploy:doc": "./build/scripts/release.sh",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/criatecnologiainovacao/cria-design-system.git"
    },
    "keywords": [
        "Cria",
        "UI",
        "React"
    ],
    "author": "CRIA Tecnologia e Inovação",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/criatecnologiainovacao/cria-design-system/issues"
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "modules": "commonjs"
                }
            ],
            "@babel/preset-react",
            "@babel/preset-flow"
        ],
        "plugins": [
            "@babel/plugin-proposal-class-properties",
            "@babel/plugin-proposal-object-rest-spread",
            "@babel/plugin-syntax-dynamic-import",
            "@babel/plugin-transform-runtime"
        ]
    },
    "homepage": "https://criatecnologiainovacao.github.io/cria-design-react",
    "devDependencies": {
        "@babel/cli": "^7.4.4",
        "@babel/core": "^7.4.4",
        "@babel/plugin-proposal-class-properties": "^7.4.4",
        "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
        "@babel/plugin-syntax-dynamic-import": "^7.2.0",
        "@babel/plugin-transform-runtime": "^7.4.4",
        "@babel/polyfill": "^7.4.4",
        "@babel/preset-env": "^7.4.4",
        "@babel/preset-flow": "^7.0.0",
        "@babel/preset-react": "^7.0.0",
        "@hot-loader/react-dom": "^16.8.6",
        "@storybook/addon-a11y": "^5.0.11",
        "@storybook/addon-actions": "^5.0.11",
        "@storybook/addon-knobs": "^5.0.11",
        "@storybook/addon-links": "^5.0.11",
        "@storybook/addon-storyshots": "^5.0.11",
        "@storybook/addon-storyshots-puppeteer": "^5.0.11",
        "@storybook/addon-storysource": "^5.0.11",
        "@storybook/addons": "^5.0.11",
        "@storybook/react": "^5.0.11",
        "@types/react": "^16.8.17",
        "@sambego/storybook-state": "^1.3.4",
        "acorn": "^6.0.5",
        "babel-eslint": "^10.0.1",
        "babel-standalone": "^6.26.0",
        "codemirror": "^5.46.0",
        "core-js": "^2.5.7",
        "css-loader": "^2.1.1",
        "eslint": "^5.16.0",
        "eslint-config-airbnb": "^17.1.0",
        "eslint-plugin-flowtype": "^3.9.0",
        "eslint-plugin-import": "^2.17.2",
        "eslint-plugin-jsx-a11y": "^6.2.1",
        "eslint-plugin-react": "^7.13.0",
        "file-loader": "^3.0.1",
        "flow-bin": "^0.98.1",
        "html-webpack-plugin": "^3.2.0",
        "marked": "^0.6.2",
        "mini-css-extract-plugin": "^0.6.0",
        "mock-raf": "^1.0.1",
        "node-sass": "^4.12.0",
        "prismjs": "^1.16.0",
        "raw-loader": "^2.0.0",
        "react-hot-loader": "^4.8.7",
        "react-scroll-up": "^1.3.3",
        "react-test-renderer": "^16.8.6",
        "regenerator-runtime": "^0.13.2",
        "require-context.macro": "^1.0.4",
        "sass-loader": "^7.1.0",
        "sinon": "^7.3.2",
        "storybook-chromatic": "^1.3.3",
        "style-loader": "^0.23.1",
        "typescript": "^3.4.5",
        "url-loader": "^1.1.2",
        "webpack-cli": "^3.3.2"
    },
    "dependencies": {
        "@babel/runtime": "^7.4.4",
        "async-validator": "^1.11.2",
        "classnames": "^2.2.6",
        "enzyme": "^3.9.0",
        "enzyme-adapter-react-16": "^1.13.1",
        "jest-enzyme": "^7.0.2",
        "popper.js": "^1.15.0",
        "prop-types": "^15.7.2",
        "raf": "^3.4.1",
        "react": "^16.8.6",
        "react-click-outside": "^3.0.1",
        "react-dom": "^16.8.6",
        "react-scripts": "3.0.1",
        "react-transition-group": "^4.0.1",
        "throttle-debounce": "^2.1.0"
    },
    "jest": {
        "coverageReporters": [
            "lcov"
        ],
        "collectCoverageFrom": [
            "src/**/*.jsx",
            "!src/**/*.stories.jsx",
            "!**/docs/**",
            "!node_modules/"
        ]
    }
}
